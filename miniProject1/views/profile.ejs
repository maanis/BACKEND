<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-zinc-900 text-zinc-200">

    <!-- Profile Header -->
    <div class="max-w-3xl mx-auto p-4">
        <div class="flex items-center space-x-8">
            <!-- Profile Picture -->
            <div class="w-24 h-24 rounded-full bg-zinc-700 overflow-hidden">
                <img src="/images/uploads/<%=imgurl %>" alt="User profile picture" class="w-full h-full object-cover">
            </div>

            <!-- User Info -->
            <div>
                <div class="flex flex-col justify-center">
                    <h2 class="text-2xl font-semibold block text-white">
                        <%=username %>
                    </h2>
                    <div class="flex gap-4">
                        <a href="/edit"> <button
                                class="px-4 py-1 bg-zinc-700 text-zinc-200 mt-2 rounded font-semibold hover:bg-zinc-600">Edit
                                Profile</button></a>
                        <a href="/logout">
                            <button
                                class="px-4 py-1 bg-blue-500 text-zinc-200 mt-2 rounded font-semibold hover:bg-blue-800">LogOut
                            </button>
                        </a>
                    </div>
                </div>

                <!-- Follower Counts -->
                <div class="flex space-x-8 mt-4">
                    <div><span class="font-semibold text-white">150</span> posts</div>
                    <div><span class="font-semibold text-white">1,200</span> followers</div>
                    <div><span class="font-semibold text-white">300</span> following</div>
                </div>

                <!-- Bio -->
                <div class="mt-4">
                    <p class="text-white font-semibold">
                        <%=name %>
                    </p>
                    <% if (bio !='' ) { %>
                        <p class="text-zinc-400">
                            <%=bio %>
                        </p>
                    <% } %>
                            <p class="text-blue-500 hover:underline cursor-pointer">
                                <%=email %>
                            </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Posts Grid -->
    <div class="max-w-3xl mx-auto p-4">
        <div class="grid grid-cols-3 gap-2 md:gap-4">
            <!-- Post 1 -->
            <div class="relative w-full pt-[100%] bg-zinc-700 overflow-hidden">
                <img src="https://via.placeholder.com/300" alt="Post image"
                    class="absolute inset-0 w-full h-full object-cover hover:opacity-75 transition-opacity">
            </div>
            <!-- Post 2 -->
            <div class="relative w-full pt-[100%] bg-zinc-700 overflow-hidden">
                <img src="https://via.placeholder.com/300" alt="Post image"
                    class="absolute inset-0 w-full h-full object-cover hover:opacity-75 transition-opacity">
            </div>
            <!-- Post 3 -->
            <div class="relative w-full pt-[100%] bg-zinc-700 overflow-hidden">
                <img src="https://via.placeholder.com/300" alt="Post image"
                    class="absolute inset-0 w-full h-full object-cover hover:opacity-75 transition-opacity">
            </div>
            <!-- Repeat similar blocks for more posts -->
        </div>
    </div>

</body>

</html>